<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/vault_card_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:gravity="center_vertical">

        <!-- Checkbox for selection -->
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/vault_accent"
            android:visibility="gone" />

        <!-- File Icon -->
        <ImageView
            android:id="@+id/ivFileIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_file"
            app:tint="@color/vault_accent"
            android:layout_marginEnd="14dp" />

        <!-- File Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- File Name -->
            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="filename.txt"
                android:textSize="16sp"
                android:textColor="@color/vault_text_primary"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="middle" />

            <!-- File Details -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <!-- Type -->
                <TextView
                    android:id="@+id/tvFileType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TXT"
                    android:textSize="11sp"
                    android:textColor="@color/vault_background"
                    android:background="@drawable/bg_file_type_vault"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="3dp" />

                <!-- Size -->
                <TextView
                    android:id="@+id/tvFileSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.5 KB"
                    android:textSize="12sp"
                    android:textColor="@color/vault_text_secondary"
                    android:layout_marginStart="10dp" />

                <!-- Date -->
                <TextView
                    android:id="@+id/tvUploadDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/01/2024"
                    android:textSize="12sp"
                    android:textColor="@color/vault_text_secondary"
                    android:layout_marginStart="10dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
